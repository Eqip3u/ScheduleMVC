@model ScheduleMVC_Update.Models.GroupSet

@{
    ViewBag.Title = "Добавление";
}

<h2>Добавление группы</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GroupName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line"
                       type="text"
                       id="GroupName"
                       required
                       name="GroupName"
                       placeholder="Введите номер группы..."
                       pattern="[0-9]{3}-[А-Яа-яЁё]{2}"
                       title="Введите номер группы в формате 421-ТУ"
                       data-autocomplete-source='@Url.Action("AutocompleteSearchGroup", "Schedule")' />
                @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                <p><dfn>*Например: 121-ТУ</dfn></p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", list = "list" } })
                <datalist id="list">
                    <option>Технологии управления в сфере культуры</option>
                    <option>Журналистика в области культуры</option>
                    <option>Визуальные коммуникации</option>
                    <option>Танец и современная пластическая культура</option>
                    <option>Прикладная информатика в социально-культурной сфере</option>
                </datalist>
                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MonitorOfTheTeam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MonitorOfTheTeam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MonitorOfTheTeam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MonitorTel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="MonitorTel" name="MonitorTel" type="text" class="form-control input-medium bfh-phone" data-format="+7 (ddd) ddd-dddd">
                @Html.ValidationMessageFor(model => model.MonitorTel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MonitorEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MonitorEmail, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "you@example.com" } })
                @Html.ValidationMessageFor(model => model.MonitorEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку групп", "Index")
</div>
