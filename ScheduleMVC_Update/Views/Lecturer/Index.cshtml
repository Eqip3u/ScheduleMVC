@model IEnumerable<ScheduleMVC_Update.Models.ScheduleMainSet>

@{
    ViewBag.Title = "Список пар";
}

<br />

@for (int i = 0; i < 14; i++)
{
    <div class="panel panel-default">

        <div class="panel-heading panel-heading-custom">
            <h3 class="panel-title">@DateTime.Today.AddDays(i).DayOfWeek <br /> @DateTime.Today.AddDays(i).ToString("dd.MM.yyyy")</h3>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tr>
                    <th class="col-sm-2 ">
                        Время пары
                    </th>
                    <th class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DisciplineSet.TitleDiscipline)
                    </th>
                    <th class="col-sm-1">
                        @Html.DisplayNameFor(model => model.AuditorySet.AuditoryName)
                    </th>
                    <th class="col-sm-4">
                        @Html.DisplayNameFor(model => model.GroupSet.GroupName)
                    </th>
                </tr>

                @foreach (var item in Model.Where(x => x.Date.Day == DateTime.Today.AddDays(i).Day).OrderBy(x => x.PairSet.PairNumber))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PairSet.PairStart)
                                -
                            @Html.DisplayFor(modelItem => item.PairSet.PairEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisciplineSet.TitleDiscipline)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuditorySet.AuditoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupSet.GroupName)
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
            <hr />
}